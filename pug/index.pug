    #course-section.container 
        .col-12.col-md-12
            .img-flex
                img.img-fluid(src="public/images/title05.png", alt="")
        .row.space-between
            .col-6.col-md-3
                a.img-flex(href='#course01')
                    img.img-fluid(src='public/images/course01.png')
            .col-6.col-md-3
                a.img-flex(href='#course02')
                    img.img-fluid(src='public/images/course02.png')
            .col-6.col-md-3
